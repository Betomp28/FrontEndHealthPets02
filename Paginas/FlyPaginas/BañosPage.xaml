<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEndHealthPets.Paginas.FlyPaginas.BañosPage"
             Title="Baños de tu mascota">

    <Grid>
        <!-- Imagen de fondo -->
        <Image Source="fondomascota.jpg"
               Aspect="AspectFill"
               VerticalOptions="FillAndExpand"
               HorizontalOptions="FillAndExpand" />

        <!-- Contenido principal -->
        <ScrollView>
            <StackLayout Padding="20"
                         VerticalOptions="CenterAndExpand"
                         Spacing="10">
                <!-- Espaciado entre los botones -->
                <!-- Título -->
                <Label Text="Baños de tu mascota"
                       FontSize="Large"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White" />

                <Button Text="Agregar nuevo baño"
                       BackgroundColor="Purple"
                       TextColor="White"
                       FontSize="Medium"
                       CornerRadius="20"
                       HorizontalOptions="Center"
                       WidthRequest="200"
                       Clicked="OnAddBathClicked"/>

                <!-- Nuevo botón para consultar baños -->
                <Button Text="Consultar baños"
                        BackgroundColor="Purple"
                        TextColor="White"
                        FontSize="Medium"
                        CornerRadius="20"
                        HorizontalOptions="Center"
                        WidthRequest="200" />
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
