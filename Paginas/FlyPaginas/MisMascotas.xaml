<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEndHealthPets.Paginas.FlyPaginas.MisMascotas"
             xmlns:local="clr-namespace:FrontEndHealthPets.Modelos"
             Title="MisMascotas">
    <ContentPage.BindingContext>
        <local:MascotasViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <Frame 
              Margin="20"
              BackgroundColor="White" 
              BorderColor="Purple">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Sección: Encabezado "Mis Mascotas" -->
                <Grid Grid.Row="0" Grid.Column="0" Padding="10">
                    <Grid BackgroundColor="#f8fafb" Padding="4" Margin="0,0,0,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label 
                 Grid.Column="0" 
                 Text="Mis Mascotas" 
                 FontSize="Large" 
                 FontAttributes="Bold" 
                 HorizontalTextAlignment="Center"
                 VerticalOptions="Center" />
                        <Button 
                 Grid.Column="1" 
                 ImageSource="Gear" 
                 WidthRequest="24" 
                 HeightRequest="24" 
                 HorizontalOptions="End" 
                 VerticalOptions="Center"/>
                    </Grid>
                </Grid>

                <ListView ItemsSource="{Binding PerfilMascotas}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Padding="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="{Binding ImageSource}" WidthRequest="40" HeightRequest="40" VerticalOptions="Center" />
                                    <StackLayout Grid.Column="1" VerticalOptions="Center">
                                        <Label Text="{Binding Name}" FontSize="Medium" />
                                        <Label Text="{Binding Description}" FontSize="Small" TextColor="Gray" />
                                    </StackLayout>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Sección: Botón "Agregar Nueva Mascota" al final -->
                <Grid Grid.Row="3" Grid.Column="0" Padding="10" VerticalOptions="EndAndExpand">
                    <Grid Padding="4" Margin="0,0,0,2">
                        <Button 
                  x:Name="btNuevaMascota"        
                 Text="Agregar Nueva Mascota" 
                 BackgroundColor="#368ce2" 
                 TextColor="#f8fafb" 
                 FontSize="Medium" 
                 HorizontalOptions="FillAndExpand" 
                 Clicked="btNuevaMascota_Clicked" />
                    </Grid>
                </Grid>
            </Grid>
        </Frame>
    </ScrollView>
</ContentPage>